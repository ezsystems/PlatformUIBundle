{% stylesheets
    '@EzSystemsEditorialBundle/Resources/public/vendors/pure/base-context-min.css'
    '@EzSystemsEditorialBundle/Resources/public/vendors/pure/grids-min.css'
    '@EzSystemsEditorialBundle/Resources/public/css/layout.css'
    '@EzSystemsEditorialBundle/Resources/public/css/contenteditview.css'
    '@EzSystemsEditorialBundle/Resources/public/css/contenteditformview.css'
    '@EzSystemsEditorialBundle/Resources/public/css/editactionbarview.css'
    '@EzSystemsEditorialBundle/Resources/public/css/buttonactionview.css'
    '@EzSystemsEditorialBundle/Resources/public/css/previewactionview.css'
    '@EzSystemsEditorialBundle/Resources/public/css/editpreviewview.css'
    '@EzSystemsEditorialBundle/Resources/public/css/fieldeditview.css'
    '@EzSystemsEditorialBundle/Resources/public/css/textline-editview.css'
