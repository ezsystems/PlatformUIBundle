{
    "name": "ezsystems/platform-ui-bundle",
    "description": "eZ Platform UI Bundle",
    "license": "GPL-2.0",
    "autoload": {
        "psr-4": {
            "EzSystems\\PlatformUIBundle\\": ""
        }
    },
    "require": {
        "ezsystems/platform-ui-assets-bundle": "^3.1.0",
        "ezsystems/repository-forms": "^1.2",
        "ezsystems/ezpublish-kernel": "^6.6",
        "ezsystems/ez-support-tools": "^0.1",
        "zetacomponents/system-information": "^1.1",
        "willdurand/js-translation-bundle": "^2.5",
        "jms/translation-bundle": "^1.3",
        "friendsofsymfony/jsrouting-bundle": "^1.6",
        "dpobel/ez-field-edit": "dev-master as 1.0.x-dev",
        "composer/installers": "dev-ezplatform_webcomponent as 1.3.x-dev"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/dpobel/ez-field-edit.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/dpobel/installers.git"
        }
    ],
    "require-dev": {
        "symfony/symfony": "~2.8|~3.2",
        "phpunit/phpunit": "~4.7",
        "matthiasnoback/symfony-dependency-injection-test": "^0.7",
        "mockery/mockery": "^0.9.5"
    },
    "extra": {
        "_ci_branch-comment_": "Keep ci branch up-to-date with master or branch if on stable. ci is never on github but convention used for ci behat testing!",
        "_ezplatform_branch_for_behat_tests_comment_": "ezplatform branch to use to run Behat tests",
        "_ezplatform_branch_for_behat_tests": "master",
        "branch-alias": {
            "dev-master": "1.9.x-dev",
            "dev-tmp_ci_branch": "1.9.x-dev"
        }
    }
}
